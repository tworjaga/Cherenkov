# Cherenkov Web Application Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=local

# Feature Flags
NEXT_PUBLIC_FEATURE_GLOBE=true
NEXT_PUBLIC_FEATURE_PLUME_SIMULATOR=true
NEXT_PUBLIC_FEATURE_ANOMALY_DETECTION=true
NEXT_PUBLIC_FEATURE_REAL_TIME_UPDATES=true

# Map Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_GLOBE_TILE_SERVER=https://api.mapbox.com/v4/mapbox.satellite/{z}/{x}/{y}.png

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# Development
NEXT_TELEMETRY_DISABLED=1
