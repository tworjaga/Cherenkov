# Cherenkov Web Application Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
JWT_SECRET=your-jwt-secret-key-change-in-production

# Feature Flags
NEXT_PUBLIC_ENABLE_GLOBE=true
NEXT_PUBLIC_ENABLE_PLUME_SIMULATOR=true
NEXT_PUBLIC_ENABLE_ANOMALY_DETECTION=true

# External Services
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
NEXT_PUBLIC_TILE_SERVER_URL=https://tiles.example.com

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# Build Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
