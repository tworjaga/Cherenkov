# Cherenkov Web Application Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=local

# Feature Flags
NEXT_PUBLIC_ENABLE_GLOBE=true
NEXT_PUBLIC_ENABLE_PLUME_SIMULATOR=true
NEXT_PUBLIC_ENABLE_ANOMALY_DETECTION=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# Map/Globe Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Data Sources
NEXT_PUBLIC_DEFAULT_DATA_SOURCE=safecast
NEXT_PUBLIC_DATA_REFRESH_INTERVAL=30000

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_CHART_DEFAULT_RANGE=24h

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# Build Configuration
NEXT_TELEMETRY_DISABLED=1
