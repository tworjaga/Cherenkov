# Cherenkov Web Application Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=local

# Feature Flags
NEXT_PUBLIC_ENABLE_GLOBE=true
NEXT_PUBLIC_ENABLE_PLUME_SIMULATION=true
NEXT_PUBLIC_ENABLE_ANOMALY_DETECTION=true
NEXT_PUBLIC_ENABLE_REALTIME_UPDATES=true

# Map/Globe Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false
