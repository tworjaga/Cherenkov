# Cherenkov Web Application Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8080/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
JWT_SECRET=your-jwt-secret-key-here

# Feature Flags
NEXT_PUBLIC_ENABLE_GLOBE=true
NEXT_PUBLIC_ENABLE_PLUME_SIMULATOR=true
NEXT_PUBLIC_ENABLE_ANOMALY_DETECTION=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# Map/Globe Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Data Sources
NEXT_PUBLIC_DEFAULT_DATA_SOURCE=sqlite
NEXT_PUBLIC_ENABLE_SCYLLA=false
NEXT_PUBLIC_ENABLE_KAFKA=false

# Monitoring & Analytics
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false
