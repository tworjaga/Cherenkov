# Cherenkov Environment Configuration

# Database
DATABASE_URL=sqlite://./data/cherenkov.db
SCYLLA_HOSTS=127.0.0.1:9042
SCYLLA_KEYSPACE=cherenkov

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_JWT_SECRET=your-secret-key-here
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Ingestion
INGEST_INTERVAL_SECONDS=300
INGEST_BATCH_SIZE=1000
SAFECAST_API_KEY=your-safecast-api-key
OPEN_METEO_ENABLED=true

# Stream Processing
STREAM_WINDOW_SIZE=1000
STREAM_ANOMALY_THRESHOLD=3.0
STREAM_CORRELATION_THRESHOLD=0.8

# ML
ML_MODEL_PATH=./models
ML_INFERENCE_BATCH_SIZE=32
ML_TRAINING_EPOCHS=100

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
METRICS_PORT=9090
LOG_LEVEL=info

# Web Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_APP_VERSION=1.0.0
